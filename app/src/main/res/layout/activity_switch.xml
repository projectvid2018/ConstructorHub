<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/md_teal_50"
    tools:context=".nav.activity.SwitchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:padding="5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/seller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="seller"
            android:contextClickable="true"
            android:longClickable="true"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/md_red_400"
            android:elevation="10dp"
            android:layout_gravity="top">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/seller"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="SELLER MODE"
                    android:textStyle="normal"
                    android:textColor="@color/White"
                    android:textSize="35sp"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/mars_mission"

                    />

            </LinearLayout>



        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/buyer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:contextClickable="true"
            android:clickable="true"
            android:longClickable="true"
            android:onClick="buyer"
            android:elevation="10dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/md_cyan_600"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/buyer"
                    android:layout_gravity="center"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUYER MODE"
                    android:textColor="@color/White"
                    android:textSize="40sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/mars_mission"
                    />

            </LinearLayout>



        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>