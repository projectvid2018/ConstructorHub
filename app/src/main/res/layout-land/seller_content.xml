<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_teal_50"
    android:clickable="true"
    android:orientation="vertical"
    android:weightSum="1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".seller_activity.sellerModeActivity"
    tools:showIn="@layout/app_bar_main2"
    android:focusable="true">

    <android.support.v7.widget.CardView
        android:id="@+id/add_new_products"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:layout_marginTop="2dp"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:longClickable="true"
        android:onClick="add_new_product"
        android:elevation="8dp"
        android:focusable="true"
        android:hapticFeedbackEnabled="true"
        android:padding="5dp"
        app:cardBackgroundColor="@color/md_green_400"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        tools:targetApi="lollipop">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/add_new_product"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="35dp"
                android:text="Post a product"
                android:padding="5dp"
                android:textColor="@color/White"
                android:fontFamily="@font/ncv"
                android:textSize="35sp" />

        </LinearLayout>




    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:weightSum="2"
        android:layout_weight=".25"
        android:orientation="horizontal"
        android:padding="5dp">

        <android.support.v7.widget.CardView

            android:id="@+id/watch_history"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:longClickable="true"
            android:onClick="posted_prducts"
            android:elevation="8dp"
            android:focusable="true"
            android:hapticFeedbackEnabled="true"
            android:padding="5dp"
            app:cardBackgroundColor="@color/md_blue_300"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            tools:targetApi="lollipop">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"

                >

                <ImageView
                    android:id="@+id/watch_history_icon"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/posted_products"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/watch_history_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="Products list"
                    android:textColor="@color/White"
                    android:fontFamily="@font/ncv"
                    android:textSize="30sp"
                    />

            </LinearLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/transaction"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:longClickable="true"
            android:onClick="sup_transaction"
            android:elevation="8dp"
            android:focusable="true"
            android:hapticFeedbackEnabled="true"
            android:padding="5dp"
            app:cardBackgroundColor="@color/md_red_400"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp"
            tools:targetApi="lollipop">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <ImageView
                    android:id="@+id/transaction_icon"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:padding="5dp"
                    android:src="@drawable/sup_transactions"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/transaction_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@+id/transaction_icon"
                    android:layout_toRightOf="@+id/transaction_icon"
                    android:text="@string/transactions"
                    android:textColor="@color/White"
                    android:fontFamily="@font/ncv"
                    android:textSize="30sp" />


            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:weightSum="2"
        android:layout_weight=".25"
        android:padding="5dp">

        <android.support.v7.widget.CardView

            android:id="@+id/order_list"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:longClickable="true"
            android:onClick="sup_orders"
            android:elevation="8dp"
            android:focusable="true"
            android:hapticFeedbackEnabled="true"
            android:padding="5dp"
            app:cardBackgroundColor="@color/SlateBlue"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            tools:targetApi="lollipop">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/order"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="@string/orders"
                    android:textColor="@color/White"
                    android:textSize="30sp"
                    android:fontFamily="@font/ncv"
                    />

            </LinearLayout>




        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:onClick="goChatList"
            android:id="@+id/chatListSellerId"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:longClickable="true"
            android:elevation="8dp"
            android:focusable="true"
            android:hapticFeedbackEnabled="true"
            android:padding="5dp"
            app:cardBackgroundColor="@color/MediumAquamarine"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp"
            tools:targetApi="lollipop">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"

                >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:padding="15dp"
                android:src="@drawable/live_chat"
                android:focusable="true"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="@string/live_chat"
                android:textColor="@color/White"
                android:fontFamily="@font/ncv"
                android:textSize="30sp" />
            </LinearLayout>




        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:onClick="goConstructionEngineering"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/md_cyan_300"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:contextClickable="true"
        android:longClickable="true"
        android:elevation="8dp"
        android:focusable="true"
        android:hapticFeedbackEnabled="true"
        android:padding="5dp"
        tools:ignore="UnusedAttribute">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/gears"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Construction Engineering"
                android:layout_gravity="center_vertical"
                android:textSize="30sp"
                android:fontFamily="@font/ncv"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>