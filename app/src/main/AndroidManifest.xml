<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hub.constructor.constructorhub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/buyer_mode"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".nav.activity.FeedbackActivity"
            android:label="@string/feedback" />
        <activity
            android:name=".product.activity.ProductsActivity"
            android:label="@string/products"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".WatchActivity"
            android:label="@string/watch_history"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TransactionsActivity"
            android:label="@string/transactions"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".OrdersActivity"
            android:label="@string/orders"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ChatActivity"
            android:label="@string/live_chat"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".nav.activity.SwitchActivity"
            android:label="@string/switch_profile" />
        <activity
            android:name=".sellerModeActivity"
            android:label="@string/supplier_mode"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".supply.SupTransactionActivity"
            android:label="@string/transactions"
            android:parentActivityName=".sellerModeActivity" />
        <activity
            android:name=".supply.SupChatActivity"
            android:label="@string/live_chat"
            android:parentActivityName=".sellerModeActivity" />
        <activity
            android:name=".supply.SupOrdersActivity"
            android:label="@string/orders"
            android:parentActivityName=".sellerModeActivity" />
        <activity
            android:name=".product.activity.PostedProductsActivity"
            android:label="@string/posted_products"
            android:parentActivityName=".sellerModeActivity" />
        <activity
            android:name=".AddNewProductActivity"
            android:label="@string/add_new_product"
            android:parentActivityName=".sellerModeActivity" />
        <activity
            android:name=".nav.activity.NotificationsActivity"
            android:label="@string/notifications"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".supply.SupNotificationActivity"
            android:label="@string/notifications"
            android:parentActivityName=".sellerModeActivity" />
        <activity
            android:name=".ForgotpassActivity"
            android:label="Forget password" />
        <activity
            android:name=".start.activity.SignupActivity"
            android:label="Sign up" />
        <activity
            android:name=".nav.activity.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
    </application>

</manifest>