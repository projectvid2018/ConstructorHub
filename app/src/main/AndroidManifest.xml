<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hub.constructor.constructorhub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".product.byer.ByerModeActivity"
            android:label="@string/buyer_mode"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".start.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".start.activity.LoginActivity"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".nav.activity.FeedbackActivity"
            android:label="@string/feedback" />
        <activity
            android:name=".product.byer.ProductsActivity"
            android:label="@string/products"
            android:parentActivityName=".product.byer.ByerModeActivity" />
        <activity
            android:name=".product.byer.WatchActivity"
            android:label="@string/watch_history"
            android:parentActivityName=".product.byer.ByerModeActivity" />
        <activity
            android:name=".product.byer.TransactionsActivity"
            android:label="@string/transactions"
            android:parentActivityName=".product.byer.ByerModeActivity" />
        <activity
            android:name=".product.byer.OrdersActivity"
            android:label="@string/orders"
            android:parentActivityName=".product.byer.ByerModeActivity" />
        <activity
            android:name=".product.byer.ChatActivity"
            android:label="@string/live_chat"
            android:parentActivityName=".product.byer.ByerModeActivity" />
        <activity
            android:name=".nav.activity.SwitchActivity"
            android:label="@string/switch_profile" />
        <activity
            android:name=".seller.sellerModeActivity"
            android:label="@string/supplier_mode"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".seller.SupTransactionActivity"
            android:label="@string/transactions"
            android:parentActivityName=".seller.sellerModeActivity" />
        <activity
            android:name=".seller.SupChatActivity"
            android:label="@string/live_chat"
            android:parentActivityName=".seller.sellerModeActivity" />
        <activity
            android:name=".seller.SupOrdersActivity"
            android:label="@string/orders"
            android:parentActivityName=".seller.sellerModeActivity" />
        <activity
            android:name=".seller.PostedProductsActivity"
            android:label="@string/posted_products"
            android:parentActivityName=".seller.sellerModeActivity" />
        <activity
            android:name=".seller.AddNewProductActivity"
            android:label="@string/add_new_product"
            android:parentActivityName=".seller.sellerModeActivity" />
        <activity
            android:name=".nav.activity.NotificationsActivity"
            android:label="@string/notifications"
            android:parentActivityName=".product.byer.ByerModeActivity" />
        <activity
            android:name=".seller.SupNotificationActivity"
            android:label="@string/notifications"
            android:parentActivityName=".seller.sellerModeActivity" />
        <activity
            android:name=".start.activity.ForgotpassActivity"
            android:label="Forget password" />
        <activity
            android:name=".start.activity.SignupActivity"
            android:label="Sign up" />
        <activity
            android:name=".nav.activity.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".ProductProfileActivity"></activity>
    </application>

</manifest>