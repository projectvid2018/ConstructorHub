<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hub.constructor.constructorhub">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/buyer_mode"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FeedbackActivity"
            android:label="@string/feedback" />
        <activity
            android:name=".ProductsActivity"
            android:label="@string/products"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".WatchActivity"
            android:label="@string/watch_history"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TransactionsActivity"
            android:label="@string/transactions"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".OrdersActivity"
            android:label="@string/orders"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ChatActivity"
            android:label="@string/live_chat"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SwitchActivity"
            android:label="@string/switch_profile" />
        <activity
            android:name=".Main2Activity"
            android:label="@string/supplier_mode"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SupTransactionActivity"
            android:label="@string/transactions"
            android:parentActivityName=".Main2Activity" />
        <activity
            android:name=".SupChatActivity"
            android:label="@string/live_chat"
            android:parentActivityName=".Main2Activity" />
        <activity
            android:name=".SupOrdersActivity"
            android:label="@string/orders"
            android:parentActivityName=".Main2Activity" />
        <activity
            android:name=".PostedProductsActivity"
            android:label="@string/posted_products"
            android:parentActivityName=".Main2Activity" />
        <activity
            android:name=".AddNewProductActivity"
            android:label="@string/add_new_product"
            android:parentActivityName=".Main2Activity" />
        <activity
            android:name=".NotificationsActivity"
            android:label="@string/notifications"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".SettingsActivity" />
        <activity
            android:name=".SupNotificationActivity"
            android:label="@string/notifications"
            android:parentActivityName=".Main2Activity"/>

        <activity android:name=".ForgotpassActivity"/>
        <activity android:name=".SignupActivity"/>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

</manifest>