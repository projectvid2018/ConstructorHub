<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="hub.constructor.constructorhub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">


        <activity android:name=".start.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".start.activity.LoginActivity"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <!-- Buyer Activity -->
        <activity
            android:name=".product.buyer.BuyerModeActivity"
            android:label="@string/buyer_mode"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".product.buyer.ProductsActivity"
            android:label="@string/products"
            android:parentActivityName=".product.buyer.BuyerModeActivity" />
        <activity
            android:name=".product.buyer.WishActivity"
            android:label="Wish List"
            android:parentActivityName=".product.buyer.BuyerModeActivity" />
        <activity
            android:name=".product.buyer.TransactionsActivity"
            android:label="@string/transactions"
            android:parentActivityName=".product.buyer.BuyerModeActivity" />
        <activity
            android:name=".product.buyer.OrdersActivity"
            android:label="@string/orders"
            android:parentActivityName=".product.buyer.BuyerModeActivity" />
        <activity
            android:name=".product.buyer.ProductDescriptionActivity"
            android:label="Products Details"
            android:parentActivityName=".product.buyer.ProductsActivity" />

        <!-- Nav Activity -->
        <activity
            android:name=".nav.activity.SwitchActivity"
            android:label="@string/switch_profile" />
        <activity
            android:name=".nav.activity.FeedbackActivity"
            android:label="@string/feedback" />
        <activity
            android:name=".nav.activity.DeveloperActivity"
            android:label="Building and Land Developer"
            android:parentActivityName=".seller_activity.sellerModeActivity"/>
        <activity
            android:name=".nav.activity.NotificationsActivity"
            android:label="@string/notifications"
            android:parentActivityName=".product.buyer.BuyerModeActivity" />
        <activity
            android:name=".nav.activity.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <!-- Seller Activity -->
        <activity
            android:name=".seller_activity.sellerModeActivity"
            android:label="Seller Mode"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".seller_activity.SupTransactionActivity"
            android:label="@string/transactions"
            android:parentActivityName=".seller_activity.sellerModeActivity" />
        <activity
            android:name=".seller_activity.SupOrdersActivity"
            android:label="@string/orders"
            android:parentActivityName=".seller_activity.sellerModeActivity" />
        <activity
            android:name=".seller_activity.PostedProductsActivity"
            android:label="@string/posted_products"
            android:parentActivityName=".seller_activity.sellerModeActivity" />
        <activity
            android:name=".seller_activity.AddNewProductActivity"
            android:label="@string/add_new_product"
            android:parentActivityName=".seller_activity.sellerModeActivity" />
        <activity
            android:name=".seller_activity.SupNotificationActivity"
            android:label="@string/notifications"
            android:parentActivityName=".seller_activity.sellerModeActivity" />
        <activity
            android:name=".seller_activity.ConstructionEngineering"
            android:label="Construction Engineering"
            android:parentActivityName=".seller_activity.sellerModeActivity" />

        <!-- Start Activity -->
        <activity
            android:name=".start.activity.ForgotpassActivity"
            android:label="Forget password" />
        <activity
            android:name=".start.activity.SignupActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Chat Activity -->
        <activity
            android:name=".chat_activity.ChatActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".chat_activity.ChatListActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>